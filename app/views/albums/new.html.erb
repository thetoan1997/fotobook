<div class="container row">
    <%= render partial: "home/option_feeds_discover" %>
    <div class="col-sm-8 new-album">
        <div class="title-new-photo">
            <h3>New Album</h3>
        </div>
        <div class="row main-new-photo">
                <%= form_for([@user,@album], :html => { :multipart => true }) do |f| %>
                    <div class="col-sm-6 title-mode-div">
                        <div class="title-title-mode-div">
                        <%= f.label :title %><br>
                        <%= f.text_field :title %><br>
                        </div>
                        <div class="mode-title-mode-div">
                        <%= f.label :sharing_mode %><br>
                        <%= f.select(:private, options_for_select([['public', 0], ['private', 1]])) %>
                        </div>
                    </div>
                    <div class="col-sm-6 description-div">
                        <%= f.label :description %>
                        <%= f.text_area :description %>
                    </div>
                    <%= f.hidden_field :user_id, value: current_user.id %>

                    <div class="image-div">
                        <%= f.fields_for :images do |p| %>
                            <%= p.label :image_url %>
                            <%= p.file_field :image_link, :multiple => true, id: "avatar-upload" %>
                        <% end %>
                        <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden"/> <br/>
                    </div>
                    <%= f.submit "Save" %>
                <% end %>
        </div>
    </div>    
</div>