<div class="container row">
    <%= render partial: "home/option_feeds_discover" %>
    <div class="col-sm-8 new-photo">
        <div class="title-new-photo">
            <h3>New Photo</h3>
        </div>
        <div class="row main-new-photo">
            <div class="col-sm-6 title-mode-div">
                <%= form_for(@photo) do |f| %>
                    <%= f.label :title %>
                    <%= f.text_field :title %>

                    <%= f.label :description %>
                    <%= f.text_area :description, size: "60x30" %>

                    <%= f.select(:private, options_for_select([['public', 0], ['private', 1]])) %>

                    <%= f.hidden_field :user_id, value: current_user.id %>

                    <%= f.fields_for @photo.build_image do |p| %>
                        <%= p.label :image_url %>
                        <%= p.file_field :image_link %>

                        <%= p.hidden_field :imageable_type, value: "Photo" %>
                        <%= p.hidden_field :imageable_id, value: current_user.id %>
                    <% end %>
                    <%= f.submit "Save" %>
                <% end %>
            </div>
            <div class="col-sm-6 description-div">
                
            </div>
        </div>
        <div class="upload-image">
            
        </div>
    </div>    
</div>