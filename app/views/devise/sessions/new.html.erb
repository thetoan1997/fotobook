<div class="row">
    <div class="form-devise col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <h2 class="title-devise"><%= t(".fotobook-login") %></h2>
      <div class="user-signin account-wall">
        <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                  alt="">
        <div class="form-signin">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-signin" %>
            </div>
          <% end %>
        </div>
        <div class= "go-to-forgot-password">
          <%= link_to "Forgot password?", new_user_password_path(resource_name) %><br />
        </div>
      </div>
      <div class= "go-to-signup">
        <%= link_to "Create an account", new_registration_path(resource_name) %><br />
      </div>
    </div>
</div>
