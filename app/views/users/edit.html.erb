<div class="row container-edit-user">
  <div class="col-md-2"></div>
  <div class="col-md-8 content-edit-form">
    <div class="title-edit-user">
      <h2>Edit User Profile</h2>
    </div>
    <div class="content-edit-user row">
        <div class="account-wall">
          <div class="form-signin">

            <div class="edit-profile form-horizontal"> 
                <%= form_for(@user) do |f| %>
                    <div class="form-group">
                        <div class="choose-image col-sm-offset-2">
                            <div class="choose-file-field form-group">
                                <%= f.file_field :avatar, id: "avatar-upload" %>
                            </div>
                            <% if check_avatar_exist?(@user) %>
                                <div class="choose-image-field ">
                                    <img id="avatar_prev" width=300 height=300 src=<%= url_for(@user.avatar) %> class="img-thumbnail up-index"/>
                                </div>
                            <% else %>
                                <div class="choose-image-field">
                                    <img id="avatar_prev" width=300 height=300 src="#" class="img-thumbnail"/>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :firstname, class: "control-label col-sm-2" %>
                        <div class="col-sm-10">
                            <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :lastname, class: "control-label col-sm-2" %>
                        <div class="col-sm-10">
                            <%= f.text_field :lastname, class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :email, class: "control-label col-sm-2" %>
                        <div class="col-sm-10">
                            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :password, class: "control-label col-sm-2" %>
                        <div class="col-sm-10">
                            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="actions">
                            <%= f.submit "Save", class: "btn btn-success col-sm-offset-2" %>
                        </div>
                    </div>
                <% end %>
            </div>
            
        </div>
    </div>
  </div>
</div>
