<div class="row">
    <%= render partial: "home/option_feeds_discover" %>
    <div class="col-sm-8 profile-user">
        <div class="row info-user">
            <div class="col-sm-3 content-avatar-user-info">
                <img class="avatar-user" src="https://i.imgur.com/FYySxYP.png">
            </div>
            <div class="col-sm-9 content-info-user-info">
                <div class="follow"><span class="follow-span">follow</span></div>
                <p class="name"><b><%= @user.username %></b></p>
                <p class="account"><span class="active" data-toggle="tab" href="#home-photos"><%= @user.photos.size %> PHOTOS</span> |  
                                   <span data-toggle="tab" href="#menu-albums"><%= @user.albums.size %> ALBUMS</span> | 
                                   <span data-toggle="tab" href="#menu-followings"><%= @user.followings.size %> FOLLOWINGS</span>| 
                                   <span data-toggle="tab" href="#menu-followers"><%= @user.followers.size %> FOLLOWERS</span></p>
            </div>
        </div>
        <div class="row album-user tab-content">
            <div id="home-photos" class="tab-pane fade in active">
                <%= render partial: "photos_user", locals: { images: @photos } %>
            </div>
            <div id="menu-albums" class="tab-pane fade">
                <%= render partial: "albums_user", locals: { albums: @albums } %>
            </div>
            <div id="menu-followings" class="tab-pane fade">
                <%= render partial: "followings_user", locals: { users: @user_followings } %>
            </div>
            <div id="menu-followers" class="tab-pane fade">
                <%= render partial: "followers_user", locals: { users: @user_followers } %>
            </div>
        </div>  

    </div>    
  
  </div>