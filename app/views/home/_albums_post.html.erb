<div class="col-lg-6 content-post-part">
    <div class="this-post">
        <div class="row this-post-row">
            <div class="this-post-picture col-sm-7">
                <div class="album-picture">
                    <div class="square-fit picture-first">
                        <% unless album.images[0].nil? %>
                            <% if album.images[0].image_link.attached? %>
                                <img class="picture-in-album" data-toggle="modal" data-target="#myModal-<%= type %><%= album.id %>" src=<%= url_for(album.images[0].image_link) %>>
                            <% end %>
                        <% end %>
                        <div class="title-hover">
                            <p class="title"><span><%= album.images.size %></span> <br> PHOTOS</p>
                        </div>
                    </div>
                    <div class="square-fit picture-second">
                        <% unless album.images[1].nil? %>
                            <% if album.images[1].image_link.attached? %>
                                <img class="picture-in-album" src=<%= url_for(album.images[1].image_link) %>>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="square-fit picture-third">
                        <% unless album.images[2].nil? %>
                            <% if album.images[2].image_link.attached? %>
                                <img class="picture-in-album" src=<%= url_for(album.images[2].image_link) %>>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="this-post-info col-sm-5 col-xs-12">
                <div class="user-of-post">
                    <img class="avatar-user" src="https://i.imgur.com/AqmDqLt.png">
                    <span>Diep Toan</span>
                </div>
                <div class="title-of-post">
                    <span><b><%= album.title %><%= album.id %></b></span>
                </div>
                <div class="content-of-post">
                    <span><%= album.description %></span>
                </div>
                <div class="likes-and-date-of-post">
                    <span class="glyphicon glyphicon-heart"></span><span>30</span><span><%= album.updated_at.strftime("%T %d/%m/%Y") %></span>
                </div>
            </div>
        </div>
    </div>
</div>